<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- Mapper xml 에서 자주 사용하는 type 에 별칭 부여하기 -->
	<typeAliases>
		<typeAlias type="com.acorn5.project.gallery.dto.GalleryDto"
			alias="galleryDto"/>		
		<typeAlias type="com.acorn5.project.cafe.dto.CafeDto"
			alias="cafeDto"/>
		<typeAlias type="com.acorn5.project.cafe.dto.CafeCommentDto"
			alias="cafeCommentDto"/>		
	</typeAliases>
	
	<!-- Mapper xml 문서의 위치  설정 -->
	<mappers>
		<mapper resource="com/acorn5/project/mybatis/GalleryMapper.xml"/>
		<mapper resource="com/acorn5/project/mybatis/CafeMapper.xml"/>	
		<mapper resource="com/acorn5/project/mybatis/CafeCommentMapper.xml"/>
	</mappers>
</configuration>
